<Window x:Class="MdSearch_1._0.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Авторизация" 
        Height="380" Width="424"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="/Resources/background.png"/>
    </Window.Background>

    <Border Background="#66000000" CornerRadius="5" Margin="10">
        <Grid Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Label Content="Логин:" 
                   FontSize="16" 
                   Foreground="#FFEAEA91" 
                   Grid.Row="0" Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Margin="0,5,10,5"/>
            <TextBox x:Name="TBlogin" 
                     FontSize="16" 
                     Grid.Row="0" Grid.Column="1"
                     Height="30" 
                     VerticalContentAlignment="Center"
                     Margin="0,5,0,5"/>

            <Label Content="Email:" 
                   FontSize="16" 
                   Foreground="#FFEAEA91" 
                   Grid.Row="1" Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Margin="0,5,10,5"/>
            <TextBox x:Name="TBemail" 
                     FontSize="16" 
                     Grid.Row="1" Grid.Column="1"
                     Height="30" 
                     VerticalContentAlignment="Center"
                     Margin="0,5,0,5"/>

            <Label Content="Пароль:" 
                   FontSize="16" 
                   Foreground="#FFEAEA91" 
                   Grid.Row="2" Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Margin="0,5,10,5"/>
            <PasswordBox x:Name="PBpass" 
                         FontSize="16" 
                         Grid.Row="2" Grid.Column="1"
                         Height="30" 
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,5"/>

            <Label x:Name="LabelVerificationCode"
                   Content="Код:" 
                   FontSize="16" 
                   Foreground="#FFEAEA91" 
                   Grid.Row="3" Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Margin="0,5,10,5"
                   Visibility="Collapsed"/>
            <TextBox x:Name="TBverificationCode" 
                     FontSize="16" 
                     Grid.Row="3" Grid.Column="1"
                     Height="30" 
                     VerticalContentAlignment="Center"
                     Margin="0,5,0,5"
                     Visibility="Collapsed"/>

            <Button x:Name="BtnEnter"
                    Content="Войти"
                    Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    Width="150"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,10,0,10"
                    Click="Enter_Click"/>

            <Button x:Name="BtnVerify"
                    Content="Подтвердить"
                    Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    Width="150"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,10,0,10"
                    Click="Verify_Click"
                    Visibility="Collapsed"/>

            <TextBlock x:Name="AuthMessage" 
                       Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="Red"
                       Margin="0,5,0,0"/>

            <TextBlock x:Name="TimerText"
                       Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="LightGreen"
                       Margin="0,5,0,0"/>
        </Grid>
    </Border>
</Window>