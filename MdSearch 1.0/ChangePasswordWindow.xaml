<Window x:Class="MdSearch_1._0.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить пароль" 
        Width="350" 
        Height="180"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">

    <Window.Background>
        <ImageBrush ImageSource="/Resources/background.png"/>
    </Window.Background>

    <Border Background="#66000000" CornerRadius="5" Margin="10" Padding="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Введите новый пароль:" Margin="0,0,0,10" 
                       FontSize="16" Foreground="White"/>
            <TextBox
                     x:Name="NewPasswordBox" 
                     FontSize="16" 
                     Background="White"
                     Width="350"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Center"
                     Height="30" Margin="0,31,0,0" Grid.RowSpan="2"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="GeneratePasswordButton"
                        Click="GeneratePasswordButton_Click"
                        ToolTip="Сгенерировать надёжный пароль"
                        Width="45"
                        Height="31"
                        Margin="0,0,10,0"
                        Padding="0"
                        VerticalAlignment="Center">
                    <Image Source="/Resources/generate_icon.png"
                           Width="30"
                           Height="27"/>
                </Button>

                <Button Content="ОК" 
                        Width="86" 
                        Margin="0,0,10,0" 
                        Click="OkButton_Click" 
                        IsDefault="True" 
                        Height="31" 
                        Foreground="White" 
                        FontSize="16" 
                        Padding="5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Отмена" 
                        Width="86" 
                        IsCancel="True" 
                        Height="31" 
                        Foreground="White" 
                        FontSize="16" 
                        Padding="5" 
                        Click="CancelButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>